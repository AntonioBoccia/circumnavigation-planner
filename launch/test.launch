<launch>


  <rosparam command='load' file='$(find dynamic_network_estimate)/param/target.yaml'/>


  <group ns='agent1'>

  <arg name='agent_names' value='agent1 agent2 agent3 agent4'/>
  <param name='agent_names' value='$(arg agent_names)'/>
  <param name='node_name' type='str' value='agent1'/>

    <rosparam param='initial_position'>
      [1.0, 3.0]
    </rosparam>

    <rosparam param='initial_estimate'>
      [0.8, 1.2]
    </rosparam>

    <rosparam command='load' file='$(find dynamic_network_estimate)/param/target.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/estimate.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/simulator.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/planner.yaml'/>
  

    <node name='vehicle_simulator'
      pkg='dynamic_network_estimate'
      type='vehicle_simulator.py'/>

    <node name='dynamic_planner'
      pkg='dynamic_network_estimate'
      type='dynamic_planner.py'
      output='screen'/>

    <node name='estimate'
      pkg='dynamic_network_estimate'
      type='estimate.py'/>

    <node name='sensor_simulator'
      pkg='dynamic_network_estimate'
      type='sensor_simulator.py'/>

  </group>


  <group ns='agent2'>

    <arg name='agent_names' value='agent1 agent2 agent3 agent4'/>
    <param name='agent_names' value='$(arg agent_names)'/>
    <param name='node_name' type='str' value='agent2'/>

    <rosparam param='initial_position'>
      [0.0, 0.0]
    </rosparam>
    
    <rosparam param='initial_estimate'>
      [0.9, 1.1]
    </rosparam>

    <rosparam command='load' file='$(find dynamic_network_estimate)/param/target.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/estimate.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/simulator.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/planner.yaml'/>


    <node name='vehicle_simulator'
      pkg='dynamic_network_estimate'
      type='vehicle_simulator.py'/>
    
    <node name='dynamic_planner'
      pkg='dynamic_network_estimate'
      type='dynamic_planner.py'/>

    <node name='estimate'
      pkg='dynamic_network_estimate'
      type='estimate.py'/>

    <node name='sensor_simulator'
      pkg='dynamic_network_estimate'
      type='sensor_simulator.py'/>

  </group>

  <group ns='agent3'>

    <arg name='agent_names' value='agent1 agent2 agent3 agent4'/>
    <param name='agent_names' value='$(arg agent_names)'/>
    <param name='node_name' type='str' value='agent3'/>

    <rosparam param='initial_position'>
      [1.5, -1.0]
    </rosparam>

    <rosparam param='initial_estimate'>
      [0.9, 1.3]
    </rosparam>

    <rosparam command='load' file='$(find dynamic_network_estimate)/param/target.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/estimate.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/simulator.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/planner.yaml'/>


    <node name='vehicle_simulator'
      pkg='dynamic_network_estimate'
      type='vehicle_simulator.py'/>
    
    <node name='dynamic_planner'
      pkg='dynamic_network_estimate'
      type='dynamic_planner.py'/>

    <node name='estimate'
      pkg='dynamic_network_estimate'
      type='estimate.py'/>

    <node name='sensor_simulator'
      pkg='dynamic_network_estimate'
      type='sensor_simulator.py'/>

  </group>

<group ns='agent4'>

  <arg name='agent_names' value='agent1 agent2 agent3 agent4'/>
  <param name='agent_names' value='$(arg agent_names)'/>
  <param name='node_name' type='str' value='agent4'/>

    <rosparam param='initial_position'>
      [3.0, 2.0]
    </rosparam>

    <rosparam param='initial_estimate'>
      [0.9, 1.1]
    </rosparam>

    <rosparam command='load' file='$(find dynamic_network_estimate)/param/target.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/estimate.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/simulator.yaml'/>
    <rosparam command='load' file='$(find dynamic_network_estimate)/param/planner.yaml'/>


    <node name='vehicle_simulator'
      pkg='dynamic_network_estimate'
      type='vehicle_simulator.py'/>
    
    <node name='dynamic_planner'
      pkg='dynamic_network_estimate'
      type='dynamic_planner.py'/>

    <node name='estimate'
      pkg='dynamic_network_estimate'
      type='estimate.py'/>

    <node name='sensor_simulator'
      pkg='dynamic_network_estimate'
      type='sensor_simulator.py'/>

  </group>

  <rosparam command='load' file='$(find dynamic_network_estimate)/param/plotter.yaml'/>
  <arg name='agent_names' value='agent1 agent2 agent3 agent4'/>
  <param name='agent_names' value='$(arg agent_names)'/>
  <node name='plotter'
    pkg='dynamic_network_estimate'
    type='plotter.py'/>


</launch>
